$(".new-post").hide();
$("#posts").html("<%= escape_javascript(render("posts/posts")) %>");
pag = $("#pag1").html();
while (pag.search("posts/new_pic") != -1) {
  pag = pag.replace("posts/new_pic", "users/<%= @user.id %>");
}
$("#pag1").html(pag);
pag = $("#pag2").html();
while (pag.search("posts/new_pic") != -1) {
  pag = pag.replace("posts/new_pic", "users/<%= @user.id %>");
}
$("#pag2").html(pag);
  
<% if flash[:post_error] %>
  $('#error-post').html("<%= flash[:post_error] %>");
  setTimeout("$('#error-post').html('');", 5000);
<% end %>
  
